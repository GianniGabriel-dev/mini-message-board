<html>
  <head>
    <title>Mini Message Board</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>Mini Message Board</h1>
      <%- include('navbar', { links: links }) %>
    </header>
    <main>
      <section class="message-details">
        <p class="message-user"><%= message.sender_name %> said:</p>
        <p class="message-text"><%= message.message %></p>
        <p class="message-date"><%= new Date(message.created_at).toLocaleString() %></p>
      </section>
    </main>
  </body>
</html>
