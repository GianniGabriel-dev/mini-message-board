<html>
  <head>
    <title>Mini Message Board</title>
  </head>
  <body>
    <header>
      <h1>Write a new message</h1>
      <%- include('navbar', { links: links }) %>
    </header>
    <main>        
      <section>
        <form method="POST" action="/new">  
          <div>
            <label for="messageUser">Name:</label>
            <input type="text" name="messageUser" required>
          </div>
          <div>
            <label for="messageText">Message:</label>
            <textarea id="messageText" name="messageText" required></textarea>
          </div>
          <button type="submit">Send</button>
         </form>
      </section>
    </main>
  </body>
</html>